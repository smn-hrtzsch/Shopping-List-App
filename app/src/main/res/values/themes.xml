<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Einkaufsliste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorSurface">@color/light_gray</item>
        <item name="colorSurfaceSecondary">#CACACA</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorOnSurfaceSecondary">@color/dark_gray</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <item name="materialAlertDialogTheme">@style/AppMaterialAlertDialogTheme</item>
        <item name="snackbarStyle">@style/AppSnackbarStyle</item>

    </style>

    <style name="MyDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="AppMaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyDialogButton</item>
    </style>

    <style name="AppSnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/AppSnackbarThemeOverlay</item>
    </style>

    <style name="AppSnackbarThemeOverlay" parent="">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorOnPrimary">@color/light_gray</item>
    </style>

</resources>