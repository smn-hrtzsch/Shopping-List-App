<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Einkaufsliste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSurface">@color/light_gray</item>
        <item name="colorSurfaceSecondary">#CACACA</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorOnSurfaceSecondary">@color/dark_gray</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <item name="alertDialogTheme">@style/AppMaterialAlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/AppMaterialAlertDialogTheme</item>
        <item name="snackbarStyle">@style/AppSnackbarStyle</item>
    </style>

    <style name="MyDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_action_text_adaptive</item>
    </style>

    <style name="AppMaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/dialog_action_text_adaptive</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyDialogButton</item>
    </style>

    <style name="AppSnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/AppSnackbarThemeOverlay</item>
        <item name="backgroundTint">?attr/colorSurfaceSecondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Snackbar</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AppSnackbarThemeOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="colorPrimary">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="ShapeAppearance.App.Snackbar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="AccentInputTheme" parent="">
        <item name="colorControlActivated">?attr/colorOnSurface</item>
        <item name="colorAccent">?attr/colorOnSurface</item>
        <item name="colorPrimary">?attr/colorOnSurface</item>
        <item name="colorError">?attr/colorError</item>
        <item name="boxStrokeErrorColor">?attr/colorError</item>
        <item name="errorTextColor">?attr/colorError</item>
    </style>

    <style name="ButtonStyle.Solid" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background_adaptive_light</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="rippleColor">?attr/colorOnSurfaceSecondary</item>
    </style>

    <style name="Widget.App.Button.Close" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="icon">@drawable/ic_decline_list</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeColor">?attr/colorOnSurfaceSecondary</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <!-- Ensure text is empty if set via style, though usually set in layout. 
             Ideally we don't set text in layout when using this style. -->
    </style>

    <!-- Auth Input Styles -->
    <style name="Widget.App.TextInputLayout.Auth" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AccentInputTheme</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="Widget.App.TextInputEditText.Auth" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:importantForAutofill">yes</item>
    </style>
</resources>