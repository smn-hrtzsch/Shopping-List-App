<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Einkaufsliste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorSurfaceSecondary">#494949</item>
        <item name="colorOnSurface">@color/light_gray</item>
        <item name="colorOnSurfaceSecondary">@color/light_gray</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="colorError">@color/orange2</item>
        <item name="colorOnError">@color/black</item>

        <item name="materialAlertDialogTheme">@style/AppMaterialAlertDialogTheme</item>
        <item name="snackbarStyle">@style/AppSnackbarStyle</item>


    </style>

    <style name="AppMaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorSecondary">@color/orange2</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/light_gray</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColorPrimary">@color/light_gray</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <style name="AppSnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/AppSnackbarThemeOverlay</item>
    </style>

    <style name="AppSnackbarThemeOverlay" parent="">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
    </style>

</resources>