<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_clear_list_title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_clear_list_message"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_remove_checked"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:text="@string/dialog_option_remove_checked"
        app:cornerRadius="30dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        app:strokeColor="?attr/colorOnSurfaceSecondary"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_remove_all"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:text="@string/dialog_option_remove_all"
        app:cornerRadius="30dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="?attr/colorError"
        app:strokeColor="?attr/colorError"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_dialog_cancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/button_cancel"
        android:textColor="@color/dialog_action_text_adaptive"/>

</LinearLayout>