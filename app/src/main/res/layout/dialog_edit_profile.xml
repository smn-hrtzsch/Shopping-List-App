<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/edit"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dialog_close"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_decline_list"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:padding="0dp"
            app:strokeColor="?attr/colorOnSurfaceSecondary"
            app:iconTint="?attr/colorOnSurface" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_username"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_username_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_profile_pic_title"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_option_new_image"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:text="@string/option_new_image"
        app:icon="@drawable/ic_cloud_upload_24"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:cornerRadius="30dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        app:iconTint="?attr/colorOnSurface"
        app:strokeColor="?attr/colorOnSurfaceSecondary"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_option_remove_image"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:text="@string/option_remove_image"
        app:icon="@drawable/ic_delete_24"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:cornerRadius="30dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="?attr/colorError"
        app:iconTint="?attr/colorError"
        app:strokeColor="?attr/colorError"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_save_profile_dialog"
        style="@style/ButtonStyle.Solid"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/button_save"
        android:textAllCaps="false"
        app:cornerRadius="28dp"/>

</LinearLayout>