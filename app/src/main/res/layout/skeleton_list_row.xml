<?xml version="1.0" encoding="utf-8"?>
<!-- skeleton_list_row.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?attr/colorSurfaceSecondary">

        <!-- Title Skeleton -->
        <View
            android:id="@+id/skeleton_title"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Subtitle/ItemCount Skeleton -->
        <View
            android:id="@+id/skeleton_subtitle"
            android:layout_width="80dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            app:layout_constraintTop_toBottomOf="@+id/skeleton_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Action Buttons Area Skeleton (Right side) -->
        
        <!-- Simulate "Edit" button position -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            app:layout_constraintEnd_toStartOf="@+id/skeleton_action_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"/>

        <!-- Simulate "Delete" button position -->
        <View
            android:id="@+id/skeleton_action_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>