<?xml version="1.0" encoding="utf-8"?>
<!-- skeleton_list_row.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?attr/colorSurfaceSecondary">

        <!-- Title Skeleton - Mimicking 18sp TextView -->
        <View
            android:id="@+id/skeleton_title"
            android:layout_width="140dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/skeleton_action_edit"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"/>

        <!-- Subtitle Skeleton - Mimicking 12sp TextView -->
        <View
            android:id="@+id/skeleton_subtitle"
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            app:layout_constraintTop_toBottomOf="@+id/skeleton_title"
            app:layout_constraintStart_toStartOf="@+id/skeleton_title"
            android:layout_marginTop="4dp"/>

        <!-- Action Buttons Area Skeleton (Right side) - Matching real buttons (40dp) -->
        <View
            android:id="@+id/skeleton_action_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/skeleton_action_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            app:layout_constraintEnd_toStartOf="@+id/skeleton_action_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>