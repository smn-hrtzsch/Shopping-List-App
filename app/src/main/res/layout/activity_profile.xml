<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator" 
            app:title=""/>
            
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progress_bar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:visibility="visible"/>

        <!-- Content Container (Hidden initially) -->
        <LinearLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Header Icon -->
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_account_circle_24"
                app:tint="@color/icon_tint_adaptive"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"/>

            <!-- View Mode: Zeigt existierenden Namen -->
            <LinearLayout
                android:id="@+id/layout_view_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_view_current_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Mustermann"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_adaptive"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/text_view_label_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_username"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_adaptive"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>

            <!-- Edit Mode: Eingabefeld -->
            <LinearLayout
                android:id="@+id/layout_edit_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                
                <TextView
                    android:id="@+id/text_view_profile_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_info"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/text_secondary_adaptive"
                    android:layout_marginBottom="24dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_username_hint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:theme="@style/AccentInputTheme"
                    app:boxStrokeColor="@color/input_stroke_selector"
                    app:hintTextColor="@color/input_stroke_adaptive"
                    android:textColorHint="@color/input_stroke_adaptive"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_primary_adaptive"
                        android:textCursorDrawable="@null"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_save_profile"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/button_save"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/button_background_adaptive"
                    android:textColor="@color/text_primary_adaptive"
                    app:cornerRadius="28dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Danger Zone -->
            <TextView
                android:id="@+id/text_view_warning_anonymous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_warning_anonymous"
                android:textColor="?attr/colorError"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete_account"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_delete_account"
                android:textColor="?attr/colorError"
                app:strokeColor="?attr/colorError"
                app:cornerRadius="8dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
