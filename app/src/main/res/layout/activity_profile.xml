<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/account_info"
            app:titleTextColor="?attr/colorOnSurface"/>
            
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progress_bar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:visibility="visible"/>

        <!-- Content Container (Hidden initially) -->
        <ScrollView
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Profile Image Area (Restored to look like screenshot) -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp">

                    <ImageView
                        android:id="@+id/image_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/ic_launcher_background"
                        android:padding="20dp"
                        android:src="@drawable/ic_launcher_foreground" 
                        android:scaleType="centerInside" />
                        <!-- Note: src used to be launcher_foreground on top of background in typical adaptive icons. 
                             If the user wants strictly the 'green placeholder', launcher_background is key. 
                             I'll layer them to make it look like the app icon. -->

                    <ImageView
                        android:id="@+id/icon_edit_image"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|end"
                        android:background="@mipmap/ic_launcher_round"
                        android:padding="4dp"
                        android:src="@drawable/ic_edit_24"
                        app:tint="@android:color/white"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/text_email_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="user@example.com"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- View Mode -->
                <LinearLayout
                    android:id="@+id/layout_view_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/label_username"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="?android:attr/textColorSecondary"/>

                    <TextView
                        android:id="@+id/text_view_current_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp"
                        android:text="Benutzername"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Edit Mode -->
                <LinearLayout
                    android:id="@+id/layout_edit_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    
                    <TextView
                        android:id="@+id/text_view_profile_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_info"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="24dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/profile_username_hint"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_save_profile"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/button_save"
                        android:layout_marginTop="16dp"
                        app:cornerRadius="28dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

                <!-- Anonymous Warning -->
                <TextView
                    android:id="@+id/text_view_warning_anonymous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="#1A0F55AA"
                    android:padding="12dp"
                    android:text="@string/profile_warning_anonymous"
                    android:textColor="?attr/colorError"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <!-- Delete Account Button (Always visible) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_delete_account"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_delete_account"
                    android:textColor="?attr/colorError" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

                <!-- NEW: Auth Buttons (Visible only when anonymous) -->
                <LinearLayout
                    android:id="@+id/layout_auth_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_register_email"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/action_register_email"
                        app:cornerRadius="30dp"
                        android:textAllCaps="false"
                        android:textSize="16sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_register_google"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/sign_in_google"
                        app:icon="@drawable/ic_cloud_24"
                        app:iconGravity="textStart"
                        app:cornerRadius="30dp"
                        android:textAllCaps="false"
                        android:textSize="16sp"/>

                </LinearLayout>

                 <!-- Sign Out Button (Visible only when logged in) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_sign_out"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/button_sign_out"
                    app:cornerRadius="30dp"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
