<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/account_info"
            app:titleTextColor="?attr/colorOnSurface"/>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/profile_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Profile Image Area -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp">

                    <ImageView
                        android:id="@+id/image_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_account_circle_24"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"/>

                    <ProgressBar
                        android:id="@+id/progress_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminateTint="?attr/colorOnSurface"/>
                </FrameLayout>
                
                <!-- View Mode -->
                <LinearLayout
                    android:id="@+id/layout_view_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_view_current_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_username"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>

                <!-- Edit Mode (Inline) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/layout_edit_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurfaceSecondary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_username_hint"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginBottom="16dp"/>

                        <include
                            android:id="@+id/include_username_input_inline"
                            layout="@layout/merge_input_with_button" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Inline Auth Container (for Anonymous users) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/layout_auth_inline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurfaceSecondary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auth_dialog_title"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_email_inline"
                            style="@style/Widget.App.TextInputLayout.Auth"
                            android:layout_marginBottom="4dp"
                            android:hint="@string/prompt_email">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_text_email_inline"
                                style="@style/Widget.App.TextInputEditText.Auth"
                                android:inputType="textEmailAddress"
                                android:autofillHints="emailAddress"
                                android:imeOptions="actionNext" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/error_text_email_inline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorError"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            app:drawableStartCompat="@drawable/ic_error_outline_24"
                            android:drawablePadding="8dp"
                            app:drawableTint="?attr/colorError"
                            android:gravity="center_vertical"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_password_inline"
                            style="@style/Widget.App.TextInputLayout.Auth"
                            android:layout_marginBottom="24dp"
                            android:hint="@string/prompt_password"
                            app:endIconMode="password_toggle"
                            app:errorIconDrawable="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_text_password_inline"
                                style="@style/Widget.App.TextInputEditText.Auth"
                                android:inputType="textPassword"
                                android:autofillHints="password"
                                android:imeOptions="actionDone" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/error_text_password_inline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorError"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            app:drawableStartCompat="@drawable/ic_error_outline_24"
                            android:drawablePadding="8dp"
                            app:drawableTint="?attr/colorError"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/error_text_general_inline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorError"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:layout_marginBottom="32dp"
                            android:layout_marginStart="4dp"
                            app:drawableStartCompat="@drawable/ic_error_outline_24"
                            android:drawablePadding="8dp"
                            app:drawableTint="?attr/colorError"
                            android:gravity="center_vertical"/>

                        <include
                            android:id="@+id/auth_loading_container_inline"
                            layout="@layout/dialog_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginBottom="16dp"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_login_inline"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:text="@string/action_sign_in"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:textColor="?attr/colorOnSurface"
                                app:strokeColor="?attr/colorOnSurface"
                                app:cornerRadius="25dp"
                                android:textAllCaps="false"
                                android:layout_marginEnd="8dp"
                                android:textSize="14sp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_register_inline"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:text="@string/action_register"
                                android:textColor="?attr/colorOnSurface"
                                app:strokeColor="?attr/colorOnSurface"
                                app:cornerRadius="25dp"
                                android:textAllCaps="false"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_google_inline"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/sign_in_google"
                            app:icon="@drawable/ic_google_logo"
                            app:iconGravity="textStart"
                            app:iconPadding="16dp"
                            app:iconTint="@null"
                            app:cornerRadius="25dp"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            app:strokeColor="?attr/colorOnSurface"/>

                        <TextView
                            android:id="@+id/text_forgot_password_inline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/action_forgot_password"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Sync Preferences -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_sync_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurfaceSecondary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_sync_private_title"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_sync_private_desc"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_sync_private"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/switch_thumb_selector"
                            app:trackTint="@color/switch_track_selector"
                            app:useMaterialThemeColors="false"
                            android:checked="true"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_linked_methods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurfaceSecondary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/linked_auth_methods"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:textColor="?attr/colorOnSurface"/>

                        <LinearLayout
                            android:id="@+id/layout_linked_methods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">
                            <!-- Items will be added dynamically here -->
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- SPACER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="24dp"/>

                <!-- Auth Buttons -->
                <LinearLayout
                    android:id="@+id/layout_auth_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_register_email"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/action_sign_in_email"
                        app:icon="@drawable/ic_email"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconTint="?attr/colorOnSurface"
                        app:cornerRadius="30dp"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_register_google"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/sign_in_google"
                        app:icon="@drawable/ic_google_logo"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconTint="@null"
                        app:cornerRadius="30dp"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_sign_out"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/button_sign_out"
                    app:icon="@drawable/ic_logout_24"
                    app:iconGravity="textStart"
                    app:iconPadding="16dp"
                    app:iconTint="?attr/colorOnSurface"
                    app:cornerRadius="30dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_delete_account"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/profile_delete_account"
                    app:icon="@drawable/ic_delete_24"
                    app:iconGravity="textStart"
                    app:iconPadding="16dp"
                    app:iconTint="?attr/colorError"
                    android:textColor="?attr/colorError"
                    app:strokeColor="?attr/colorError"
                    app:cornerRadius="30dp"
                    android:layout_marginBottom="4dp"/>

                <!-- Warning -->
                <TextView
                    android:id="@+id/text_view_warning_anonymous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    android:text="@string/profile_warning_anonymous"
                    android:textAlignment="center"
                    android:textColor="?attr/colorError"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>