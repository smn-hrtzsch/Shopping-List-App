<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/account_info"
            app:titleTextColor="?attr/colorOnSurface"/>
            
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ProgressBar
            android:id="@+id/progress_bar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:visibility="visible"/>

        <ScrollView
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Profile Image Area -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp">

                    <ImageView
                        android:id="@+id/image_profile"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_account_circle_24"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"/>
                    
                    <ImageView
                        android:id="@+id/icon_edit_image"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/ic_account_circle_24"
                        android:backgroundTint="?attr/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/ic_edit_24"
                        app:tint="?attr/colorOnPrimary"
                        android:elevation="4dp"
                        android:visibility="visible"
                        tools:visibility="visible"/>
                </FrameLayout>
                
                <!-- View Mode -->
                <LinearLayout
                    android:id="@+id/layout_view_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_view_current_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Mustermann"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/text_view_label_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_username"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>

                <!-- Edit Mode -->
                <LinearLayout
                    android:id="@+id/layout_edit_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    
                    <TextView
                        android:id="@+id/text_view_profile_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_info"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="24dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/profile_username_hint"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:theme="@style/AccentInputTheme"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="?attr/colorOnSurface"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_save_profile"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/button_save"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="16dp"
                        app:cornerRadius="28dp"/>
                </LinearLayout>

                <!-- Sync Preferences -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_sync_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOnSurfaceSecondary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_sync_private_title"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_sync_private_desc"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_sync_private"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/layout_linked_methods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    tools:visibility="visible">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VerknÃ¼pfte Anmelde-Methoden:"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                        
                    <!-- Items will be added dynamically here -->
                </LinearLayout>

                <!-- SPACER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="32dp"/>

                <!-- Warning -->
                <TextView
                    android:id="@+id/text_view_warning_anonymous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:text="@string/profile_warning_anonymous"
                    android:textAlignment="center"
                    android:textColor="?attr/colorError"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <!-- Auth Buttons -->
                <LinearLayout
                    android:id="@+id/layout_auth_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_register_email"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/action_sign_in_email"
                        app:icon="@drawable/ic_email"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:cornerRadius="30dp"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_register_google"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/sign_in_google"
                        app:icon="@drawable/ic_google_logo"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconTint="@null"
                        app:cornerRadius="30dp"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>
                        
                </LinearLayout>
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_sign_out"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/button_sign_out"
                    app:icon="@drawable/ic_logout_24"
                    app:iconGravity="textStart"
                    app:iconPadding="16dp"
                    app:iconTint="?attr/colorOnSurface"
                    app:cornerRadius="30dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_delete_account"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/profile_delete_account"
                    app:icon="@drawable/ic_delete_24"
                    app:iconGravity="textStart"
                    app:iconPadding="16dp"
                    app:iconTint="?attr/colorError"
                    android:textColor="?attr/colorError"
                    app:strokeColor="?attr/colorError"
                    app:cornerRadius="30dp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
