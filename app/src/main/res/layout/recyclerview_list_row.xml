<?xml version="1.0" encoding="utf-8"?>
<!-- recyclerview_list_row.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="?attr/colorSurfaceSecondary">

        <TextView
            android:id="@+id/list_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/barrier_actions"
            android:layout_marginEnd="8dp"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="button_edit_list_name_inline,button_save_list_name_inline,button_delete_list_inline,button_join_list,button_decline_list,cloud_icon"/>

        <ImageView
            android:id="@+id/cloud_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_cloud_24"
            android:visibility="gone"
            app:tint="?attr/colorControlNormal"
            app:layout_constraintEnd_toStartOf="@id/button_edit_list_name_inline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/edit_text_list_name_inline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            android:visibility="gone"
            android:inputType="textCapSentences"
            android:imeOptions="actionDone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_save_list_name_inline"
            android:layout_marginEnd="8dp"/>

        <!-- Action Buttons Group -->
        
        <!-- Delete / Leave / Decline (Rightmost) -->
        <ImageButton
            android:id="@+id/button_delete_list_inline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/button_delete_list"
            app:tint="?attr/colorControlNormal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/button_decline_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_decline_list"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/button_decline"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Edit / Save / Join (Left of Delete) -->
        <ImageButton
            android:id="@+id/button_edit_list_name_inline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/button_edit_list"
            app:tint="?attr/colorControlNormal"
            app:layout_constraintEnd_toStartOf="@+id/button_delete_list_inline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="0dp"/>

        <ImageButton
            android:id="@+id/button_save_list_name_inline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_save_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/button_save"
            android:visibility="gone"
            app:tint="?attr/colorControlNormal"
            app:layout_constraintEnd_toStartOf="@+id/button_delete_list_inline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="0dp"/>

        <ImageButton
            android:id="@+id/button_join_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_join_list"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/button_join"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/button_decline_list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="0dp"/>

        <TextView
            android:id="@+id/list_item_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@+id/list_name_text_view"
            app:layout_constraintStart_toStartOf="@id/list_name_text_view"
            android:layout_marginTop="4dp"
            android:text="@string/no_items_yet"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>