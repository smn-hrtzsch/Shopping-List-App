<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth_dialog_title"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dialog_close"
            style="@style/Widget.App.Button.Close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_email"
                style="@style/Widget.App.TextInputLayout.Auth"
                android:layout_marginBottom="4dp"
                android:hint="@string/prompt_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_email"
                    style="@style/Widget.App.TextInputEditText.Auth"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"
                    android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/error_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorError"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                app:drawableStartCompat="@drawable/ic_error_outline_24"
                android:drawablePadding="8dp"
                app:drawableTint="?attr/colorError"
                android:gravity="center_vertical"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_password"
                style="@style/Widget.App.TextInputLayout.Auth"
                android:layout_marginBottom="32dp"
                android:hint="@string/prompt_password"
                app:endIconMode="password_toggle"
                app:errorIconDrawable="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_password"
                    style="@style/Widget.App.TextInputEditText.Auth"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:imeOptions="actionDone" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/error_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorError"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginStart="4dp"
                android:layout_marginTop="-28dp"
                android:layout_marginBottom="32dp"
                app:drawableStartCompat="@drawable/ic_error_outline_24"
                android:drawablePadding="8dp"
                app:drawableTint="?attr/colorError"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/error_text_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorError"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginStart="4dp"
                android:layout_marginTop="-28dp"
                android:layout_marginBottom="32dp"
                app:drawableStartCompat="@drawable/ic_error_outline_24"
                android:drawablePadding="8dp"
                app:drawableTint="?attr/colorError"
                android:gravity="center_vertical"/>

            <include
                android:id="@+id/auth_loading_container"
                layout="@layout/dialog_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/action_sign_in"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="?attr/colorOnSurface"
                app:strokeColor="?attr/colorOnSurface"
                app:cornerRadius="30dp"
                android:textAllCaps="false"
                android:textSize="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_register"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:text="@string/action_register"
                android:textColor="?attr/colorOnSurface"
                app:strokeColor="?attr/colorOnSurface"
                app:cornerRadius="30dp"
                android:textAllCaps="false"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/action_forgot_password"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>