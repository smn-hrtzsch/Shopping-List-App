<?xml version="1.0" encoding="utf-8"?>
<!-- skeleton_profile_anonymous_with_username.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Profile Image Skeleton (Circle) -->
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_skeleton_pill"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"/>
            
        <!-- (Note: Pill shape with large radius acts as circle for square view if radius >= size/2) -->

        <!-- Username Text Skeleton -->
        <View
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginBottom="4dp"/>

        <!-- Label Skeleton -->
        <View
            android:layout_width="100dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginBottom="24dp"/>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="24dp"/>

        <!-- Button 1 Skeleton (Email) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_skeleton_pill"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>
            
        <!-- Button 2 Skeleton (Google) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_skeleton_pill"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginBottom="8dp"/>
            
        <!-- Button 3 Skeleton (Delete) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_skeleton_pill"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginBottom="8dp"/>

        <!-- Warning Text Skeleton (Line 1) -->
        <View
            android:layout_width="250dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="4dp"/>

        <!-- Warning Text Skeleton (Line 2) -->
        <View
            android:layout_width="70dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginBottom="4dp"/>

        <!-- Warning Text Skeleton (Line 3) -->
        <View
            android:layout_width="280dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginBottom="4dp"/>

        <!-- Warning Text Skeleton (Line 4) -->
        <View
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_dialog_rounded"
            android:backgroundTint="?attr/colorOnSurfaceSecondary"
            android:alpha="0.15"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>